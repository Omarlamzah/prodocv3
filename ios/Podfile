# Uncomment this line to define a global platform for your project
platform :ios, '15.5'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'
      # Fix for Swift Package Manager dependencies
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['SWIFT_VERSION'] = '5.0'
      # Enable Swift Package Manager support
      config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'YES'
    end
    
    # Comprehensive fix for "Build input file cannot be found" error with privacy bundles
    # Privacy bundles are resource-only and should not be code signed
    target_name = target.name.downcase
    is_privacy_bundle = target_name.include?('privacy') || 
                       target_name.end_with?('_privacy') ||
                       target_name.end_with?('_privacy.bundle')
    
    if is_privacy_bundle || (target.respond_to?(:product_type) && target.product_type == 'com.apple.product-type.bundle')
      target.build_configurations.each do |config|
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
        config.build_settings['CODE_SIGNING_INJECT_BASE_ENTITLEMENTS'] = 'NO'
        config.build_settings['MACH_O_TYPE'] = 'mh_bundle'
        config.build_settings['SKIP_INSTALL'] = 'YES'
        config.build_settings['STRIP_INSTALLED_PRODUCT'] = 'NO'
        # Prevent Xcode from looking for a binary in resource-only bundles
        config.build_settings['EXECUTABLE_EXTENSION'] = ''
        config.build_settings['EXECUTABLE_PREFIX'] = ''
        # Ensure the bundle is treated as a resource bundle
        config.build_settings['PRODUCT_TYPE'] = 'com.apple.product-type.bundle'
        # Allow missing input files (the script phase will create them)
        config.build_settings['ALWAYS_SEARCH_USER_PATHS'] = 'NO'
      end
      
      # Remove any file references that might cause Xcode to look for the privacy manifest as a build input
      target.build_phases.each do |phase|
        if phase.respond_to?(:files)
          files_to_remove = []
          phase.files.to_a.each do |file|
            if file.respond_to?(:file_ref) && file.file_ref
              begin
                file_name = file.file_ref.path rescue nil
                if file_name && (file_name.include?('privacy') || file_name.end_with?('_privacy'))
                  files_to_remove << file
                end
              rescue
                # Ignore errors
              end
            end
          end
          files_to_remove.each { |f| phase.files.delete(f) rescue nil }
        end
        
        # Also check input file lists
        if phase.respond_to?(:input_file_list_paths)
          phase.input_file_list_paths = phase.input_file_list_paths.reject { |path| path.to_s.include?('privacy') } rescue nil
        end
        
        # Check input paths
        if phase.respond_to?(:input_paths)
          phase.input_paths = phase.input_paths.reject { |path| path.to_s.include?('privacy') } rescue nil
        end
      end
      
      # Add script phase to create the privacy manifest file during build
      # The file name should match the target name (e.g., url_launcher_ios_privacy)
      script_phase_name = 'Create Privacy Manifest File'
      # Check if script phase already exists
      existing_script = target.shell_script_build_phases.find { |phase| phase.name == script_phase_name }
      
      unless existing_script
        script_phase = target.new_shell_script_build_phase(script_phase_name)
        
        # Determine output paths for both archive and regular builds
        output_paths = []
        output_paths << "${UNINSTALLED_PRODUCTS_DIR}/${WRAPPER_NAME}/${TARGET_NAME}"
        output_paths << "${BUILT_PRODUCTS_DIR}/${WRAPPER_NAME}/${TARGET_NAME}"
        
        script_phase.shell_script = <<-SCRIPT
          # Create privacy manifest file immediately - this MUST run before Xcode checks for inputs
          echo "Creating privacy manifest for ${TARGET_NAME}..."
          echo "WRAPPER_NAME: ${WRAPPER_NAME}"
          echo "TARGET_NAME: ${TARGET_NAME}"
          
          # Extract package name from target (e.g., url_launcher_ios_privacy -> url_launcher_ios)
          PACKAGE_NAME="${TARGET_NAME}"
          PACKAGE_NAME="${PACKAGE_NAME%_privacy}"
          PACKAGE_NAME="${PACKAGE_NAME%_Privacy}"
          echo "PACKAGE_NAME: ${PACKAGE_NAME}"
          
          # Create files in both possible locations to cover all build scenarios
          # For archive builds: UNINSTALLED_PRODUCTS_DIR (this is where the error occurs)
          if [ -n "${UNINSTALLED_PRODUCTS_DIR}" ]; then
            ARCHIVE_BUNDLE_PATH="${UNINSTALLED_PRODUCTS_DIR}/${WRAPPER_NAME}"
            mkdir -p "${ARCHIVE_BUNDLE_PATH}" || true
            ARCHIVE_MANIFEST="${ARCHIVE_BUNDLE_PATH}/${TARGET_NAME}"
            # Also try with package name (some targets use package_name_privacy)
            ARCHIVE_MANIFEST_PKG="${ARCHIVE_BUNDLE_PATH}/${PACKAGE_NAME}_privacy"
            touch "${ARCHIVE_MANIFEST}" || true
            touch "${ARCHIVE_MANIFEST_PKG}" || true
            chmod 644 "${ARCHIVE_MANIFEST}" || true
            chmod 644 "${ARCHIVE_MANIFEST_PKG}" || true
            echo "✓ Created privacy manifest (archive): ${ARCHIVE_MANIFEST}"
            ls -la "${ARCHIVE_BUNDLE_PATH}" || true
          fi
          
          # For regular builds: BUILT_PRODUCTS_DIR
          if [ -n "${BUILT_PRODUCTS_DIR}" ]; then
            REGULAR_BUNDLE_PATH="${BUILT_PRODUCTS_DIR}/${WRAPPER_NAME}"
            mkdir -p "${REGULAR_BUNDLE_PATH}" || true
            REGULAR_MANIFEST="${REGULAR_BUNDLE_PATH}/${TARGET_NAME}"
            REGULAR_MANIFEST_PKG="${REGULAR_BUNDLE_PATH}/${PACKAGE_NAME}_privacy"
            touch "${REGULAR_MANIFEST}" || true
            touch "${REGULAR_MANIFEST_PKG}" || true
            chmod 644 "${REGULAR_MANIFEST}" || true
            chmod 644 "${REGULAR_MANIFEST_PKG}" || true
            echo "✓ Created privacy manifest (regular): ${REGULAR_MANIFEST}"
            ls -la "${REGULAR_BUNDLE_PATH}" || true
          fi
          
          # Also try TARGET_BUILD_DIR as fallback
          if [ -n "${TARGET_BUILD_DIR}" ]; then
            FALLBACK_BUNDLE_PATH="${TARGET_BUILD_DIR}/${WRAPPER_NAME}"
            mkdir -p "${FALLBACK_BUNDLE_PATH}" || true
            FALLBACK_MANIFEST="${FALLBACK_BUNDLE_PATH}/${TARGET_NAME}"
            touch "${FALLBACK_MANIFEST}" || true
            chmod 644 "${FALLBACK_MANIFEST}" || true
            echo "✓ Created privacy manifest (fallback): ${FALLBACK_MANIFEST}"
          fi
        SCRIPT
        
        # Declare the output files so Xcode knows they will be created
        script_phase.output_paths = output_paths
        script_phase.run_only_for_deployment_postprocessing = '0'
        
        # Try to move script phase to the beginning
        begin
          phases_array = target.build_phases.to_a
          if phases_array.include?(script_phase) && phases_array.first != script_phase
            phases_array.delete(script_phase)
            phases_array.unshift(script_phase)
            # Rebuild phases array
            target.build_phases.clear
            phases_array.each { |p| target.build_phases << p }
          end
        rescue => e
          # If moving fails, that's okay - the script will still run
          puts "Note: Could not reorder build phases for #{target.name}: #{e.message}"
        end
      end
    end
  end
  
  # Ensure Swift Package Manager dependencies are resolved and disable sandboxing
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
  end
  
  # Create placeholder privacy manifest files after pod install
  # This ensures they exist before Xcode checks for them as build inputs
  require 'fileutils'
  puts "Creating placeholder privacy manifest files..."
  privacy_packages = ['url_launcher_ios', 'sqflite_darwin', 'shared_preferences_foundation', 
                      'path_provider_foundation', 'flutter_secure_storage', 
                      'flutter_local_notifications', 'share_plus']
  
  # Create in a location that will be used during build
  build_dir = File.join(File.dirname(__FILE__), '..', 'build', 'ios', 'Release-iphoneos')
  FileUtils.mkdir_p(build_dir) rescue nil
  
  privacy_packages.each do |pkg|
    bundle_dir = File.join(build_dir, "#{pkg}_privacy.bundle")
    FileUtils.mkdir_p(bundle_dir) rescue nil
    manifest_file = File.join(bundle_dir, "#{pkg}_privacy")
    FileUtils.touch(manifest_file) rescue nil
    FileUtils.chmod(0644, manifest_file) rescue nil
    puts "  Created placeholder: #{manifest_file}"
  end
  
  # Create a script that will create files during build in DerivedData
  # This script will be called by the script phases
  script_content = <<-SCRIPT
#!/bin/bash
# Create privacy manifest files in DerivedData during build
PACKAGES="url_launcher_ios sqflite_darwin shared_preferences_foundation path_provider_foundation flutter_secure_storage flutter_local_notifications share_plus"

# Function to create manifest for a package
create_manifest() {
  local pkg=$1
  local base_dir=$2
  
  if [ -z "$pkg" ] || [ -z "$base_dir" ]; then
    return
  fi
  
  BUNDLE_DIR="${base_dir}/${pkg}_privacy.bundle"
  mkdir -p "$BUNDLE_DIR"
  touch "${BUNDLE_DIR}/${pkg}_privacy"
  chmod 644 "${BUNDLE_DIR}/${pkg}_privacy"
  echo "Created: ${BUNDLE_DIR}/${pkg}_privacy"
}

# Try UNINSTALLED_PRODUCTS_DIR first (for archive builds)
if [ -n "${UNINSTALLED_PRODUCTS_DIR}" ]; then
  for pkg in $PACKAGES; do
    create_manifest "$pkg" "${UNINSTALLED_PRODUCTS_DIR}"
  done
fi

# Try BUILT_PRODUCTS_DIR (for regular builds)
if [ -n "${BUILT_PRODUCTS_DIR}" ]; then
  for pkg in $PACKAGES; do
    create_manifest "$pkg" "${BUILT_PRODUCTS_DIR}"
  done
fi

# Also try to find DerivedData and create there
DERIVED_DATA_BASE="$HOME/Library/Developer/Xcode/DerivedData"
if [ -d "$DERIVED_DATA_BASE" ]; then
  # Find all Runner-* directories
  for derived_dir in "$DERIVED_DATA_BASE"/Runner-*/Build/Intermediates.noindex/ArchiveIntermediates/Runner/IntermediateBuildFilesPath/UninstalledProducts/iphoneos; do
    if [ -d "$(dirname "$derived_dir")" ]; then
      mkdir -p "$derived_dir"
      for pkg in $PACKAGES; do
        create_manifest "$pkg" "$derived_dir"
      done
    fi
  done
fi
SCRIPT

  # Save script to a file that can be executed
  script_file = File.join(File.dirname(__FILE__), 'create_privacy_manifests.sh')
  File.write(script_file, script_content)
  FileUtils.chmod(0755, script_file)
  puts "  Created script: #{script_file}"
  
  # Also try to create in DerivedData if it exists (for immediate use)
  derived_data_base = File.join(Dir.home, 'Library', 'Developer', 'Xcode', 'DerivedData')
  if File.directory?(derived_data_base)
    Dir.glob(File.join(derived_data_base, 'Runner-*')).each do |derived_dir|
      uninstalled_dir = File.join(derived_dir, 'Build', 'Intermediates.noindex', 
                                  'ArchiveIntermediates', 'Runner', 
                                  'IntermediateBuildFilesPath', 'UninstalledProducts', 'iphoneos')
      if File.directory?(File.dirname(uninstalled_dir))
        FileUtils.mkdir_p(uninstalled_dir) rescue nil
        privacy_packages.each do |pkg|
          bundle_dir = File.join(uninstalled_dir, "#{pkg}_privacy.bundle")
          FileUtils.mkdir_p(bundle_dir) rescue nil
          manifest_file = File.join(bundle_dir, "#{pkg}_privacy")
          FileUtils.touch(manifest_file) rescue nil
          FileUtils.chmod(0644, manifest_file) rescue nil
        end
      end
    end
  end
end

